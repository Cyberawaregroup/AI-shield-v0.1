# Threat Intelligence Platform Environment Configuration

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://threat_user:threat_password@localhost:5432/threat_intel
DATABASE_TEST_URL=postgresql://threat_user:threat_password@localhost:5432/threat_intel_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# External API Keys
HF_TOKEN=your_huggingface_token_here
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Threat Intelligence APIs
HIBP_API_KEY=your_hibp_api_key
ABUSEIPDB_API_KEY=your_abuseipdb_api_key
SOCRADAR_API_KEY=your_socradar_api_key
NETCRAFT_API_KEY=your_netcraft_api_key
ZVELO_API_KEY=your_zvelo_api_key

# Security Settings
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000", "http://127.0.0.1:5173"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Logging
LOG_LEVEL=INFO

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
